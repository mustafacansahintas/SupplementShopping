@using Project.ViewModels
@model OkViewModel
@{

    Layout = "~/Views/Shared/Layout.cshtml";
}



<link href="~/Content/css/login-register.css" rel="stylesheet" />


<div class="col-lg-12" style="margin-bottom:20%">
    @using (Html.BeginForm())
    {
        <section class="login-info">
            <div class="container">
                <div class="row main">
                    <div style="margin:auto" class="form-header">
                        <h1 class="text-center ">@Model.Header </h1>
                    </div>
                    <div class="main-content">

                        <div class="text-success">
                            <h2 style="text-align:center" ><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                            <hr />
                            <p class="text-justify">
                                @foreach (string item in Model.Items)
                                {
                                    @item<br />
                                }
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    }

</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function() { window.location='" + Model.RedirectingUrl + "';}," + Model.RedirectingTimeOut + ")";
    }
}
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script>
    $(function () {

       @Html.Raw(js);

    $("#searchbox").hide();

    });
</script>
