@using Entities.Concrete
@model List<Product>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/login-register.css" rel="stylesheet" />

<div class="row">
    <div style="margin:auto;margin-top:40px" class="col-md-2">
        <a style="font-size:20px;color:goldenrod;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif" href="/Admin/Index">Yönetim Paneli</a>
    </div>

    <div style="margin:auto;margin-top:40px" class="col-md-2">
        <a style="font-size:20px;color:goldenrod;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif" href="/Admin/ProductCreate">Yeni Ürün Ekle</a>
    </div>

    <div style="margin:auto;margin-top:40px" class="col-md-2">
        <a style="font-size:20px;color:goldenrod;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif" href="/Home/Logout">Çıkış Paneli</a>
    </div>
    
</div>

<style>

    thead tr th {
        color: #004F98;
        font-family: 'Cascadia Code';
    }
</style>

<div style="margin:auto;margin-top:80px" class="col-md-10">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Ürünler</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Birim Fiyat</th>
                <th scope="col">Beğeni Miktarı</th>
                <th scope="col">Satış Miktarı</th>
                <th scope="col">Stok </th>
                <th scope="col">Ürün Görsel Adres</th>
                <th scope="col">Ürün Detay Görsel Adres</th>
                <th scope="col">İndirim</th>
                <th scope="col">Marka</th>
                <th scope="col">Kategori</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>


            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {

            <tr>
                <th style="color: #004F98;font-family:'Cascadia Code'" scope="row">@(i++)</th>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.LikeCount</td>
                <td>@item.SalesAmount</td>
                <td>@item.Stock</td>
                <td>@item.ImageAdress</td>
                <td>@item.ImageDetailAdress</td>
                <td>@item.Discounted</td>
                <td>@item.BrandId</td>
                <td>@item.CategoryId</td>
                <td>@Html.ActionLink("Sil", "ProductDelete", new { id = item.Id })</td>
                <td>@Html.ActionLink("Güncelle", "ProductUpdate", new { id = item.Id })</td>



            </tr>
                }

          
            }








        </tbody>
    </table>

</div>


@Html.Partial("PartialAdminPanel")







