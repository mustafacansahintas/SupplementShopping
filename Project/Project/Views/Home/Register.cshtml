@using Entities.Concrete
@model RegisterViewModel

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="col-lg-8" style="margin:auto;margin-top:40px">
    @using (Html.BeginForm())
    {
        <section class="login-info">
            <div class="container">
                <div class="row main">
                    <div class="form-header">
                        <h1 class="text-center ">Kayıt Formu </h1>
                    </div>
                    <div class="main-content">
                        @Html.ValidationSummary(false)

                        <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınız" })

                        </div>
                        <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Soyadınız" })
                        </div>
                        <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                        </div>
                        <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email Adresiniz" })
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Gender, new { @class = "form-control", placeholder = "Cinsiyetiniz" })
                
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Tekrar Şifreniz", type = "password" })
                        </div>
                        <div class="form-group ">
                            <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

</div>
