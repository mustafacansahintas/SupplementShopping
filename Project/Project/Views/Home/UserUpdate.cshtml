@using Entities.Concrete
@using Project.Models
@model _User

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>

    .form-group {
        margin-top: 10px;
    }

    div.orta {
        background-color: #004F98;
        background-size: cover;
        height: 32px;
        display: flex;
        align-items: center;
    }

        div.orta > a {
            margin: 0 auto;
            color: #fff;
            font-size: 25px;
        }
</style>

<div class="orta">
    <a style="font-family:'Cascadia Code'" href="/Home/Account/@CurrentSession.user.Id">Hesap Bilgilerine Dön</a>
</div>


@using (Html.BeginForm())
